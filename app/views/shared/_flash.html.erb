<div class="text-center">

  <% if notice %>
    <div class="flash-alert-box bg-blue-100 border border-blue-500 text-blue-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= notice %></span>
      <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
        <svg class="flash-alert-close fill-current h-6 w-6 text-blue-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
      </span>
    </div>
  <% end %>

  <% if alert %>
    <div class="flash-alert-box bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= alert %></span>
      <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
        <svg class="flash-alert-close fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
      </span>
    </div>
  <% end %>

</div>

<script type="text/javascript">
  var flashAlerts = Array.from(document.getElementsByClassName('flash-alert-close'));
  flashAlerts.forEach(function(el){
    el.addEventListener('click', function(){
      el.closest('div.flash-alert-box').remove();
    });
  });
</script>
